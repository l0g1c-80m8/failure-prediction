    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: simulation-main",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/code/simulation/sim_env/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/code/simulation:${env:PYTHONPATH}"
            }
        },
        {
            "name": "Python Debugger: octo-main",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "python": "${workspaceFolder}/code/octo/octo_env/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/code/octo:${env:PYTHONPATH}"
            }
        }
    ]
}